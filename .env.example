# API Keys
BRAVE_API_KEY=your_brave_api_key_here
LLM_API_KEY=EMPTY

# Smart Model Configuration (vLLM)
# Default: Qwen3-32B-AWQ running on vLLM
MODEL_NAME=Qwen/Qwen3-32B-AWQ
LLM_BASE_URL=http://localhost:8000/v1

# Mid-Tier Model Configuration (Ollama)
# Used for pipelined Phase 3 translation (faster than smart model)
MID_MODEL_NAME=qwen2.5:7b
MID_LLM_BASE_URL=http://localhost:11434/v1

# Fast Model Configuration (Ollama)
# Default: llama3.2:1b (1.3GB) or phi4-mini (2.5GB)
FAST_MODEL_NAME=llama3.2:1b
FAST_LLM_BASE_URL=http://localhost:11434/v1

# Podcast Configuration
PODCAST_TOPIC=
PODCAST_LANGUAGE=en
ACCESSIBILITY_LEVEL=simple
PODCAST_HOSTS=random

# Upload Platform Credentials
BUZZSPROUT_API_KEY=
BUZZSPROUT_ACCOUNT_ID=
YOUTUBE_CLIENT_SECRET_PATH=./client_secret.json
